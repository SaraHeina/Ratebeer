<p id="notice"><%= notice %></p>

<%= @beer %>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
      beer has not yet been rated!
  <% else %>
      beer has <%=pluralize(@beer.ratings.count, 'rating') %>, average <%= @beer.average_rating %>
  <% end %>
</p>

<% if not current_user.nil? %>
<%= link_to 'Edit', edit_beer_path(@beer) %> <br>
    <%= link_to 'Destroy beer', @beer, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
