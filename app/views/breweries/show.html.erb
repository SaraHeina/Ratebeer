<p id="notice"><%= notice %></p>

<h2><%=@brewery.name%></h2>

<em>Established at
  <%= @brewery.year %>
</em>

<p>Number of beers <%= @brewery.beers.count %></p>

<p>
  <% @brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
  <% end %>
</p>

<p>
  <% if @brewery.ratings.empty? %>
      brewery has not ratings!
  <% else %>
      brewery has <%=pluralize(@brewery.ratings.count, 'rating') %>, average <%= @brewery.average_rating %>
  <% end %>
</p>

<% if not current_user.nil? %>
    <%= link_to 'Edit', edit_brewery_path(@brewery), class:"btn btn-info" %>
    <%= link_to 'Destroy brewery', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
<% end %>
<%= link_to 'Back', breweries_path, class:"btn btn-default" %>
